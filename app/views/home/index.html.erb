<section role="banner">
  <div class="container">
    <h1>Your Carpet Cleaning business on the go.</h1>

    <%= form_for(@lead) do |f| %>
      <% if @lead.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@lead.errors.count, "error") %> prohibited this email from being saved:</h2>

          <ul>
            <% @lead.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label "Enter your email for more info..." %><br />
        <%= f.text_field :email %>
